\newcommand{\image}[3]{ % arguments : path, largeur (entre 0 et 1), légende
  \begin{figure*}
    \begin{center}
      \includegraphics[width=#2\textwidth]{#1}
      \caption{#3}
    \end{center}
  \end{figure*}

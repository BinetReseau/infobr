\newcommand{\imagepos}[4]{ % arguments : path, largeur (entre 0 et 1), légende, positionnement
  \begin{figure*}[#4]
    \begin{center}
      \includegraphics[width=#2\textwidth]{#1}
      \caption{#3}
    \end{center}
  \end{figure*}
}
